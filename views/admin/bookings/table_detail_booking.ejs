<div class="card shadow mb-4 mt-3">
  <div class="card-header py-3">
    <a href="/admin/bookings" class="btn btn-secondary">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-4">
        <img src="/<%= booking.payments.proofPayment %>" alt="image" style="width: 100%; display: block">
        <div class="row mt-3">
          <% if(booking.payments.status === 'Process') { %>
            <form action="/admin/bookings/detail-booking/confirmation/<%= booking.id %>?_method=PUT" method="POST" class="ml-5">
              <button href="" class="btn btn-success btn-sm"><i class="fas fa-check"></i> Confirmation</button>
            </form>
            <form action="/admin/bookings/detail-booking/reject/<%= booking.id %>?_method=PUT" method="POST" class="ml-auto mr-5">
              <button href="" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Reject</button>
            </form>
          <% } %>
          <% if(booking.payments.status === 'Confirmed') { %>
            <form action="/admin/bookings/detail-booking/process/<%= booking.id %>?_method=PUT" method="POST" class="ml-5">
              <button href="" class="btn btn-warning btn-sm"><i class="fas fa-hourglass-half"></i> Process</button>
            </form>
            <form action="/admin/bookings/detail-booking/reject/<%= booking.id %>?_method=PUT" method="POST" class="ml-auto mr-5">
              <button href="" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Reject</button>
            </form>
          <% } %>
          <% if(booking.payments.status === 'Rejected') { %>
            <form action="/admin/bookings/detail-booking/confirmation/<%= booking.id %>?_method=PUT" method="POST" class="ml-5">
              <button href="" class="btn btn-success btn-sm"><i class="fas fa-check"></i> Confirmation</button>
            </form>
            <form action="/admin/bookings/detail-booking/process/<%= booking.id %>?_method=PUT" method="POST" class="ml-auto mr-5">
              <button href="" class="btn btn-warning btn-sm"><i class="fas fa-hourglass-half"></i> Process</button>
            </form>
          <% } %>
        </div>
      </div>
      
      <div class="col-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr> 
            </thead>
            <tbody>
              <tr>
                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                <td>$ <%= booking.total %> </td>
                <td><%= booking.payments.bankFrom %> </td>
                <td><%= booking.itemId.title %> </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>