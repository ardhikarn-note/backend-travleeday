<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-3">
    <div class="card-body">
      <div class="row">
        <div class="col-5">
          <form action="/admin/items/detail-item/add-feature" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
              </div>
              <div class="form-group">
                <label for="name">Quantity</label>
                <input type="number" class="form-control" name="qty" placeholder="Enter Quantity" required>
              </div>
              <div class="form-group">
                <label for="name">Image</label>
                <input type="file" class="form-control" name="image" required>
              </div>
              <input type="hidden" value="<%= itemId %>" name="itemId">
              <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(i = 0 ; i < feature.length ; i++){ %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= feature[i].name %></td>
                    <td><%= feature[i].qty %></td>
                    <td class="text-center">
                      <img src="http://localhost:3000/<%= feature[i].imageUrl %>" alt="imageUrl" width="30px" style="object-fit: cover;">
                    </td>
                    <td>
                      <form action="/admin/items/detail-item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE" method="POST">
                        <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm btn-update" data-id="<%= feature[i].id %>" data-name="<%= feature[i].name %>" data-qty="<%= feature[i].qty %>" ><i class="fas fa-edit"></i></a>
                        <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                      </form>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
