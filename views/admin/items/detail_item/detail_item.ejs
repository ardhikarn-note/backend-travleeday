<%- include('../../../partials/header.ejs') %>
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../../../partials/navbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../../partials/alert.ejs') %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Detail Item</h1>

        <ul class="nav nav-pills" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-feature" role="tab" aria-controls="home" aria-selected="true">Feature</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#show-activity" role="tab" aria-controls="profile" aria-selected="false">Activity</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('feature.ejs') %>
          <%- include('activity.ejs') %>
        </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../../partials/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('../../../partials/modal_logout.ejs') %>

  <%- include('modal_edit_feature.ejs') %>
  <%- include('modal_edit_activity.ejs') %>
  <%- include('../../../partials/js.ejs') %>

<script>
  $(document).ready(function() {
    $('#dataTableActivity').DataTable()
  })
  CKEDITOR.replace(document.querySelector( '#description' ));
  $('#dataTableActivity').on('click', '.btn-update', function() {
    let id = $(this).data('id');
    let name = $(this).data('name')
    let type = $(this).data('type')
    $('#edit-modal-activity').modal('show')
    $('.id').val(id)
    $('.name').val(name)
    $('.type').val(type)
  })

  $('#dataTable').on('click', '.btn-update', function() {
    let id = $(this).data('id');
    let name = $(this).data('name')
    let qty = $(this).data('qty')
    $('#edit-modal-feature').modal('show')
    $('.id').val(id)
    $('.name').val(name)
    $('.qty').val(qty)
  })
</script>