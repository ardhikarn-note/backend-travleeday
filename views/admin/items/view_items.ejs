<%- include('../../partials/header.ejs') %>
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../../partials/navbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../partials/alert.ejs') %>

          <% if(action == 'view') { %>
            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Items</h1>

            <ul class="nav nav-pills" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link" id="home-tab" data-toggle="tab" href="#add-item" role="tab" aria-controls="home" aria-selected="true">Add Item</a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#items" role="tab" aria-controls="profile" aria-selected="false">Items</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('add_item.ejs') %>
              <%- include('table_items.ejs') %>
            </div>

          <% } else if(action == 'show image') { %>
            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Image Item</h1>
              
            <ul class="nav nav-pills" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link"  href="/admin/items" >Back</a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-image" role="tab" aria-controls="home" aria-selected="true">Show Image</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('show_image.ejs') %>
            </div>
          <% } else { %>
            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Edit Item</h1>
              
            <ul class="nav nav-pills" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link"  href="/admin/items" >Back</a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#edit-item" role="tab" aria-controls="home" aria-selected="true">Edit Item</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <%- include('edit_item.ejs') %>
            </div>
          <% } %>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../partials/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('../../partials/modal_logout.ejs') %>

  <%- include('../../partials/js.ejs') %>

<script>
  CKEDITOR.replace(document.querySelector( '#description' ));
</script>