<div class="tab-pane fade show active" id="items" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-3">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>City</th>
              <th>Country</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(i = 0 ; i < item.length ; i++){ %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= item[i].title %></td>
                <td>$ <%= item[i].price %></td>
                <td><%= item[i].city %></td>
                <td><%= item[i].country %></td>
                <td>
                  <form action="/admin/items/<%= item[i].id %>?_method=DELETE" method="POST">
                    <a href="/admin/items/<%= item[i].id %>" class="btn btn-info btn-circle btn-sm"><i class="fas fa-image"></i></a>
                    <a href="/admin/items/<%= item[i].id %>"  class="btn btn-warning btn-circle btn-sm " ><i class="fas fa-edit"></i></a>
                    <button href="" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                    <a href="#" class="btn btn-success btn-circle btn-sm"><i class="fas fa-plus"></i></a>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
